                    CornerRadius="10"
                    Margin="45,0,0,0">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="#2580c3" Offset="0.0"/>
                        <GradientStop Color="#1C1C1C" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Border.Clip>
