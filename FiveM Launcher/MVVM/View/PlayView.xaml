                            VerticalAlignment="Center"
                            Height="215"
                            Width="215">
                            <Image Source="/Images/ts.png"
                                   Height="150"/>

                        </Button>
                    </StackPanel>
                </Grid>
            </Border>-->
        </StackPanel> 

        <StackPanel>
            <StackPanel.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="Margin" Value="15,0,0,0"/>
                </Style>
            </StackPanel.Resources>

            <TextBlock Text="Usefull Links:"
                   Foreground="White"
                   FontSize="20"
                   HorizontalAlignment="Left"
                   Margin="0,5,0,10"
                   FontFamily="/Fonts/#Poppins"/>

            <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,10">
                <!--Discord-->
                <Border Width="150"
                        Height="150"
                        Background="#5865F2"
                        CornerRadius="10"
                        Margin="0">

                    <Border.Clip>
                        <RectangleGeometry RadiusX="10"
                                       RadiusY="10"
                                       Rect="0,0,150,150"/>
                    </Border.Clip>

                    <Grid>
                        <StackPanel>

                            <Button x:Name="Discord_Btn"
                                Click="Discord_Btn_Clicked"
                                Background="Transparent"
                                Height="150"
                                Width="150">
                                <Image Source="/Images/Discord.png"
                                       Height="90"/>

                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!--Twitter-->
                <Border Width="150"
                        Height="150"
                        Background="#1DA1F2"
                        CornerRadius="10">

                    <Border.Clip>
                        <RectangleGeometry RadiusX="10"
                                       RadiusY="10"
                                       Rect="0,0,150,150"/>
                    </Border.Clip>

                    <Grid>
                        <StackPanel>

                            <Button x:Name="Twitter_Btn"
                                Click="Twitter_Btn_Clicked"
                                Background="Transparent"
                                Height="150"
                                Width="150">
                                <Image Source="/Images/Twitter.png"
                                       Height="110"/>

                            </Button>
                        </StackPanel>
                    </Grid>


                </Border>
                <!--Facebook-->
                <Border Width="150"
                        Height="150"
                        Background="#3299ff"
                        CornerRadius="10">

                    <Border.Clip>
                        <RectangleGeometry RadiusX="10"
                                       RadiusY="10"
                                       Rect="0,0,150,150"/>
                    </Border.Clip>

                    <Grid>
                        <StackPanel>

                            <Button x:Name="facebook_Btn"
                                Click="facebook_Btn_Clicked"
                                Background="Transparent"
                                Height="150"
                                Width="150">
                                <Image Source="/Images/fb.png"
                                       Height="110"/>

                            </Button>
                        </StackPanel>
                    </Grid>

                </Border>
                <!--Youtube-->
                <Border Width="150"
                        Height="150"
                        Background="#FF0000"
                        CornerRadius="10">

                    <Border.Clip>
                        <RectangleGeometry RadiusX="10"
                                       RadiusY="10"
                                       Rect="0,0,150,150"/>
                    </Border.Clip>

                    <Grid>
                        <StackPanel>

                            <Button x:Name="YT_Btn"
                                Click="YT_Btn_Clicked"
                                Background="Transparent"
                                Height="150"
                                Width="150">
                                <Image Source="/Images/yt.png"
                                       Height="137" Width="152"/>

                            </Button>
                        </StackPanel>
                    </Grid>

                </Border>

            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
