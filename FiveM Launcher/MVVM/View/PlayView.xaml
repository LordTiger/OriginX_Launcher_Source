<UserControl x:Class="FiveM_Launcher.MVVM.View.PlayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FiveM_Launcher.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="You Journey Starts Here:"
                   Foreground="White"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,20"
                   FontFamily="/Fonts/#Poppins"/>

        <StackPanel Orientation="Horizontal">
            <Border Width="650"
                    Height="200">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="#8A00FF" Offset="0.0"/>
                        <GradientStop Color="#BF00FF" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>


                <Border.Clip>
                    <RectangleGeometry RadiusX="10"
                                       RadiusY="10"
                                       Rect="0,0,650,200"/>
                </Border.Clip>

                <Grid>
                    <StackPanel>
                        <Button x:Name="P_Btn"
                                Content="Join City"
                                Click="P_Btn_Clicked"
                                Foreground="White"
                                Background="Transparent"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Width="650"
                                Height="210"
                                FontSize="65"
                                FontFamily="/Fonts/#Poppins"/>

                    </StackPanel>
                </Grid>
            </Border>
